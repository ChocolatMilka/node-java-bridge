{
    "name": "@markusjx/java",
    "version": "1.0.0",
    "description": "A bridge between node.js and java",
    "main": "index.js",
    "typings": "index.d.ts",
    "repository": "https://github.com/MarkusJx/node-java-bridge",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "test": "mocha -r ts-node/register test/**/*.ts",
        "pretest": "npm run build",
        "test:debug": "mocha -r ts-node/register test/**/*.ts --debug",
        "pretest:debug": "npm run build:dev",
        "build": "cmake-js compile",
        "build:dev": "cmake-js compile -D --CDLOGGING=ON",
        "pretest:dev": "npm run build:dev",
        "test:dev": "node test.js --debug",
        "postinstall": "node --unhandled-rejections=strict scripts/setJavaDllPath.js && cmake-js build",
        "clean": "cmake-js clean"
    },
    "author": "MarkusJx",
    "license": "MIT",
    "dependencies": {
        "@markusjx/n-api-tools": "^1.1.0",
        "cmake-js": "^6.3.0",
        "find-java-home": "^1.2.2",
        "node-addon-api": "^5.0.0"
    },
    "devDependencies": {
        "@types/bindings": "^1.5.1",
        "@types/mocha": "^9.0.0",
        "@types/node": "^17.0.10",
        "mocha": "^10.0.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    }
}
